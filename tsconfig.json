	"compilerOptions": {
		"module": "NodeNext",
		"target": "es6",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"*": ["src/*"]
		},
		"sourceMap": true,
		"types": ["node"]
	},
	"include": ["src/**/*"]
}
