{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es6",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"pretty": true,
		// "strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@": ["src/*"]
		},
		"sourceMap": true,
		"types": ["node"]
	},
	"include": ["src/**/*"]
}
